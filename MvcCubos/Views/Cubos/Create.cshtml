@model MvcCubos.Models.Cubo

@{
    ViewData["Title"] = "Crear Cubo";
}

<h1 class="text-center mb-4">Crear un Nuevo Cubo</h1>

<div class="container d-flex justify-content-center">
    <div class="card shadow-lg p-4" style="width: 30rem;">
        <form asp-action="Create" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <!-- ID HIDDEN -->
            <input type="hidden" asp-for="IdCubo" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" required />
            </div>

            <div class="mb-3">
                <label asp-for="Modelo" class="form-label">Modelo</label>
                <input asp-for="Modelo" class="form-control" required />
            </div>

            <div class="mb-3">
                <label asp-for="Marca" class="form-label">Marca</label>
                <input asp-for="Marca" class="form-control" required />
            </div>

            <div class="mb-3">
                <label asp-for="Precio" class="form-label">Precio (€)</label>
                <input asp-for="Precio" type="number" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Imagen</label>
                <input type="file" name="imagen" class="form-control" accept="image/*" />
            </div>

            <div class="mt-4 text-center">
                <button type="submit" class="btn btn-success">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
